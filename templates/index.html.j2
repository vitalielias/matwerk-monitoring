{% from "components/card.html.j2" import plot_card, table_card %}
{% from "components/small_card.html.j2" import small_card %}
{% from "components/medium_card.html.j2" import medium_card %}

{% extends "partials/layout.html.j2" %}

{% block content %}

<div class="container-fluid px-4">
    <h1 class="mt-4">Monitoring Hub</h1>
    <p><i>Usage metrics for various MDI tools and services. Use the sidebar to navigate between specific metrics for each service.</i></p>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active" id="last_updated_time">Last Updated: {{ report_time }} </li>
    </ol>

    <div class="row px-2" id="small-card-container">
        {{ medium_card("fas fa-users", "Total Users (across all services)", "61", "var(--bs-primary)") }}
        {{ medium_card("fas fa-microscope", "Microservices Developed", "5", "var(--bs-secondary)") }}
    </div>
    <div class="row", id="card-container">
        {{ plot_card("MS_user_growth", "Number of page accesses (SAMPLE DATA)", "fas fa-users me-1", large=True) }}
        {{ plot_card("MS_unique_accesses", "Number of page accesses from unique users (SAMPLE DATA)", "fas fa-users me-1") }}
        {{ plot_card("MS_user_distribution", "Geographical distribution of users (SAMPLE DATA)", "fas fas fa-earth-americas me-1") }}
    </div>
</div>

{% endblock %}
